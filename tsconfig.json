{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "allowImportingTsExtensions": true,
    "baseUrl": "."
  },
  "include": ["src/shared/pure/**/*.ts", "vitest.config.ts"],
  "exclude": ["src/shared/pure/**/*_test.ts", "src/shared/pure/**/*.spec.ts"]
}

CHANNEL_NAME=
# Filter criteria: 'latest' or 'first'
FILTER_CRITERIA=
# Comma-separated VOD IDs to process specific videos (takes precedence over filtering)
SPECIFIC_VODS=

# Processing flags
# Enable transcript generation (default: false)
ENABLE_TRANSCRIPTS=false
# Include total_duration in merged transcript metadata (default: false)
INCLUDE_TRANSCRIPT_DURATION=false

# Performance flags
# Set to false to use CPU
USE_GPU=true
CONCURRENT_CHUNK_PROCESS=1
WHISPER_MODEL=large-v2

# YouTube Upload Configuration
# Enable automatic upload to YouTube after download (default: false)
ENABLE_YOUTUBE_UPLOAD=false
# YouTube API OAuth2 credentials (create at https://console.cloud.google.com/)
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here
# YouTube playlist ID to add videos to (optional, leave empty to skip playlist)
YOUTUBE_PLAYLIST_ID=
# Privacy status for uploaded videos: private, unlisted, or public (default: unlisted)
YOUTUBE_VIDEO_PRIVACY=unlisted
# Maximum upload attempts before marking as failed (default: 3)
YOUTUBE_MAX_UPLOAD_ATTEMPTS=3

# Video Cleanup Configuration
# Enable automatic cleanup of old videos (default: true - recommended to manage disk space)
ENABLE_VIDEO_CLEANUP=true
# Keep videos for N days after upload to YouTube (default: 30)
VIDEO_RETENTION_DAYS=30
# Delete videos immediately after successful YouTube upload (default: false)
# If true, ignores VIDEO_RETENTION_DAYS
CLEANUP_AFTER_UPLOAD=false

# Scheduler Configuration (for scheduler.ts)
# Cron expression for download checks (default: daily at midnight)
DOWNLOAD_SCHEDULE=0 0 * * *
# Cron expression for cleanup checks (default: daily at 2 AM)
CLEANUP_SCHEDULE=0 2 * * *
# Run download check immediately on scheduler startup (default: false)
RUN_ON_STARTUP=false
